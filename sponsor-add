<script type="text/javascript">
function doit()
{ 
	var home_phone = document.myform.home_ph.value;
	var cell_phone = document.myform.cell_ph.value;
	var work_phone = document.myform.work_ph.value;
	
	if (isNaN(home_phone) || isNaN(cell_phone) || isNaN(work_phone))
	{
		alert ("please enter numeric value");
		return false;
	
	}
	
	
						//just check for first/last name 
	if (document.myform.first_nm_eng.value == "" && document.myform.first_nm_far.value == "") 
	{ 
		alert("Please fill out first name field"); 
		
		return false;
	}
	else if (document.myform.last_nm_eng.value == "" && document.myform.last_nm_far.value == "")
	{ 
		alert("Please fill out last name field"); 
		
		return false;
	}
	else if (document.myform.addr.value == "")
	{ 
		alert("Please fill out address field"); 
		
		return false;
	}
	else if (document.myform.home_ph.value == "" && document.myform.cell_ph.value == "" && document.myform.work_ph.value == "")
	{ 
		alert("Please fill out atleast one phone number "); 
		
		return false;
	}
	else if (document.myform.email.value == "")
	{ 
		alert("Please enter email id "); 
		
		return false;
	}
	
		else if(document.getElementById("save"))
		{
            alert("Datebase updated!");
            return true;
		}
      else 
            return false;
	

}</script>

